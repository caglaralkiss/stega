{
    "compilerOptions": {
	"target": "es2016",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true 
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
